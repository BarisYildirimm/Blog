{{>site-nav}}
<div class="page-wrap">
    <div class="maincontent">
        <header>
            <h1 class="page-title">Add Post</h1>
        </header>
        <div class="article-content">
            <form method="POST" action="/posts/add" enctype="multipart/form-data">
                <input name="title" type="text" placeholder="Post Title*" />
                <textarea name="description" cols="60" rows="10" placeholder="Post Content*"></textarea>
                <div class="PostImageDesign">
                    <label style="font-size: 17px;">Post Image:</label>
                    <input type="file" name="postImage" id="postImageFile">
                </div>
                <div class="authorDesign">
                    <input name="author" type="text" placeholder="Author*" style="width: 70%; display:flex;" />
                    <input type="file" name="authorImage" id="authorImageFile">
                </div>
                <button type="submit" style="margin-left: 44%;">Add Post</button>
            </form>
        </div>
    </div>
</div>
{{>site-footer}}
<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('description');
</script>